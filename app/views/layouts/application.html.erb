<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag asset_path('hammer.jpg'), :rel => 'icon', :type =>  'image/jpg' %>
    <title>Redflix</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    

    <% if logged_in?%> 
    <script type='text/javascript'> window.currentUser = <%= render('api/users/user.json.jbuilder', user: current_user).html_safe %> </script> 
